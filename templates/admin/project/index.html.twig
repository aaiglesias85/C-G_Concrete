{% extends 'admin/layout.html.twig' %}

{% block subtitle %} - Projects{% endblock %}

{% block stylesheetspecific %}

    <!-- DevExtreme theme -->
    <!--
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/23.2.5/css/dx.light.css">
    -->

{% endblock %}

{% block content %}
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">Projects</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="{{ url('home') }}" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Projects</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Manage projects</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->

    <div class="m-content">
        <div id="lista-project" class="m-portlet m-portlet--mobile" m-portlet="true">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Projects
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;" m-portlet-tool="fullscreen"
                               class="m-portlet__nav-link m-portlet__nav-link--icon">
                                <i class="la la-expand"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin: Search Form -->
                <div class="m-form m-form--label-align-right m--margin-bottom-15">
                    <div class="row align-items-center">
                        <div class="col-xl-12 order-1">
                            <div class="form-group m-form__group row align-items-center">
                                <div class="col-md-2">
                                    {% if permiso.agregar %}
                                        <a id="btn-nuevo-project"
                                           class="btn btn-success m-btn m-btn--custom m-btn--icon m-btn--air"
                                           href="javascript:;">
							<span>
								<i class="la la-plus"></i>
								<span>
									New
								</span>
							</span>
                                        </a>
                                    {% endif %}
                                </div>

                                <div class="col-md-2">
                                    <select class="form-control m-select2" id="filtro-contractor">
                                        <option value="">Contractor</option>
                                        {% for item in contractors %}
                                            <option value="{{ item.contractorId }}">{{ item.name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <select class="form-control m-select2" id="filtro-inspector">
                                        <option value="">Inspector</option>
                                        {% for item in inspectors %}
                                            <option value="{{ item.inspectorId }}">{{ item.name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input m_form_search"
                                               placeholder="Search...">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
									<span><i class="la la-search"></i></span>
								</span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <a href="javascript:;" id="btn-filtrar"
                                       class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air">
                                        <span>
                                            <i class="la la-search"></i>
                                            <span>Search</span>
                                        </span>
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    {% if permiso.eliminar %}
                                        <a id="btn-eliminar-project"
                                           class="btn btn-danger m-btn m-btn--custom m-btn--icon m-btn--air m--pull-right"
                                           href="javascript:;">
							<span>
								<i class="la la-trash-o"></i>
								<span>
									Delete
								</span>
							</span>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <div class="m_datatable" id="project-table-editable"></div>
                <!--end: Datatable -->
            </div>
        </div>

        <div id="form-project" class="m-portlet m--hide">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text" id="form-project-title">
                            Do you want to create a new project? Follow the next steps:
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;"
                               class="m-portlet__nav-link m-portlet__nav-link--icon cerrar-form-project"><i
                                        class="la la-close"></i></a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="m-portlet__body">

                <ul class="nav nav-tabs m--hide" role="tablist" id="nav-tabs-project">
                    <li class="nav-item" >
                        <a class="nav-link active wizard-tab" data-item="1"
                           data-toggle="tab" href="#tab-content-general" id="tab-general">
                            General
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link wizard-tab" data-item="2"
                           data-toggle="tab" href="#tab-content-items" id="tab-items">
                            Data Tracking
                        </a>
                    </li>
                </ul>

                <div class="tab-content">

                    <div class="tab-pane active" id="tab-content-general" role="tabpanel">
                        <form class="m-form" id="project-form" action="#" enctype="multipart/form-data"
                              method="post">

                            <input type="hidden" id="project_id" name="project_id"/>

                            <div class="m-form__section m-form__section--first">

                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-4" id="select-contractor">
                                            <label>
                                                <span class="ic-step-number">1</span>
                                                Contractor
                                                <span class="ic-small italic">(required)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change" id="contractor"
                                                    name="contractor">
                                                <option value="">Select</option>
                                                {% for item in contractors %}
                                                    <option value="{{ item.contractorId }}">{{ item.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-4" id="select-inspector">
                                            <label>
                                                Inspector
                                            </label>
                                            <select class="form-control m-select2 event-change" id="inspector"
                                                    name="inspector">
                                                <option value="">Select</option>
                                                {% for item in inspectors %}
                                                    <option value="{{ item.inspectorId }}">{{ item.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label>
                                                <span class="ic-step-number">2</span>
                                                Number
                                                <span class="ic-small italic">(required)</span>
                                            </label>
                                            <input type="text" class="form-control form-control-text event-change"
                                                   id="number" name="number"/>
                                        </div>
                                        <div class="col-md-10">
                                            <label>
                                                Name
                                            </label>
                                            <input type="text" class="form-control form-control-text event-change"
                                                   id="name" name="name"/>
                                        </div>
                                    </div>

                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">3</span>
                                        Location
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <input type="text" class="form-control event-change" id="location"
                                           name="location">
                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label>
                                                <span class="ic-step-number">4</span>
                                                PO NUMBER
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <input type="text" class="form-control form-control-text event-change"
                                                   id="po_number" name="po_number"/>
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                PO CG
                                            </label>
                                            <input type="text" class="form-control form-control-text event-change"
                                                   id="po_cg" name="po_cg"/>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </form>
                    </div>
                    <div class="tab-pane" id="tab-content-items" role="tabpanel">
                        <div class="row" id="lista-items">
                            <div class="col-lg-12">
                                <!--begin: Search Form -->
                                <div class="m-form m-form--label-align-right">
                                    <div class="row align-items-center">
                                        <div class="col-xl-12 order-1">
                                            <div class="form-group m-form__group row align-items-center">
                                                {% if permiso.agregar or permiso.editar %}
                                                    <div class="col-md-2">
                                                        <div class="btn-group">
                                                            <button id="btn-agregar-item" class="btn btn-success"
                                                                    style="margin-bottom: 20px; margin-top: 10px;">
                                                                New <i class="la la-plus"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                {% endif %}

                                                <div class="col-md-2">
                                                    <select class="form-control m-select2" id="filtro-item">
                                                        <option value="">Item</option>
                                                        {% for item in items %}
                                                            <option value="{{ item.itemId }}">{{ item.description }}
                                                            </option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class='input-group date'>
                                                        <input type='text' class="form-control m-input date-picker "
                                                               placeholder="From" autocomplete="off"
                                                               id="filtro-fecha-inicial-item"/>
                                                        <div class="input-group-append">
                                                            <span class="input-group-text">
                                                                <i class="la la-calendar glyphicon-th"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class='input-group date'>
                                                        <input type='text' class="form-control m-input date-picker "
                                                               placeholder="To" autocomplete="off"
                                                               id="filtro-fecha-fin-item"/>
                                                        <div class="input-group-append">
                                                            <span class="input-group-text">
                                                                <i class="la la-calendar glyphicon-th"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="m-input-icon m-input-icon--left">
                                                        <input type="text" class="form-control m-input m_form_search"
                                                               placeholder="Search...">
                                                        <span class="m-input-icon__icon m-input-icon__icon--left">
                                                        <span><i class="la la-search"></i></span>
                                                    </span>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <a href="javascript:;" id="btn-filtrar-items"
                                                       class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air">
                                                        <span>
                                                            <i class="la la-search"></i>
                                                            <span>Search</span>
                                                        </span>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <!--end: Search Form -->
                                <!--begin: Datatable -->
                                <div class="m_datatable" id="items-table-editable"></div>
                                <!--end: Datatable -->
                            </div>
                        </div>
                    </div>

                </div>

                <div class="m-form">
                    <div class="m-form__actions text-center">
                        <button id="btn-wizard-anterior"
                                class="btn btn-info m--hide" type="button">
                            Back
                        </button>

                        <button id="btn-wizard-siguiente"
                                class="btn btn-primary m--hide" type="button">
                            Next
                        </button>
                        {% if permiso.agregar or permiso.editar %}
                            <button id="btn-wizard-finalizar" class="btn btn-success" type="button">
                                Save
                            </button>
                        {% endif %}
                        <button class="btn btn-danger cerrar-form-project" type="button">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <div class="modal fade" id="modal-item" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New item</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="m-form" id="item-form" action="#"
                          enctype="multipart/form-data" method="post">

                        <input type="hidden" id="item_details_id" name="item_details_id"/>

                        <div class="form-group m-form__group ic-form-group">
                            <label>
                                <span class="ic-step-number">1</span>
                                Date
                                <span class="ic-small italic">(required)</span>
                            </label>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker "
                                               placeholder="Select" autocomplete="off"
                                               id="item-date" name="date"/>
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group m-form__group ic-form-group">
                            <label>
                                <span class="ic-step-number">2</span>
                                Item
                                <span class="ic-small italic">(required)</span>
                            </label>
                            <div class="row">
                                <div class="col-md-12" id="select-item">
                                    <select class="form-control m-select2" id="item">
                                        <option value="">Select</option>
                                        {% for item in items %}
                                            <option value="{{ item.itemId }}" data-price="{{ item.price }}">
                                                {{ item.description }} ${{ item.price | number_format(2, ',', '.') }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group m-form__group ic-form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>
                                        <span class="ic-step-number">3</span>
                                        Quatity
                                        <span class="ic-small italic">(required)</span>
                                    </label>
                                    <input type="text" class="form-control form-control-number" id="item-quantity" name="quantity">
                                </div>
                                <div class="col-md-4">
                                    <label>
                                        Price
                                    </label>
                                    <div class="input-group m-input-group">
                                        <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                        </div>
                                        <input type="text" class="form-control form-control-number" id="item-price"
                                               name="price">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label>
                                        Total
                                    </label>
                                    <div class="input-group m-input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">$</span>
                                        </div>
                                        <input type="text" class="form-control form-control-number" id="item-total"
                                               name="total" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="btn-salvar-item">Save</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-eliminar-item" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5>Are you sure you want to delete the selected item?</h5>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal" id="btn-delete-item">Yes
                    </button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascriptsspecific %}

    <!-- DevExtreme libraries (reference only one of them) -->
    <!--
    <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/23.2.5/js/dx.all.js"></script>
    -->
    <!-- <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/23.2.5/js/dx.web.js"></script> -->
    <!-- <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/23.2.5/js/dx.viz.js"></script> -->

    <script src="{{ asset('bundles/ican/js/pages/projects.js') }}?{{ 'now' | date('U') }}"></script>
    <script>

        var permiso = {
            agregar: {% if permiso.agregar %}{{ permiso.agregar }}{% else %}0{% endif %}, // 1 o 0
            editar: {% if permiso.editar %}{{ permiso.editar }}{% else %}0{% endif %},
            eliminar: {% if permiso.eliminar %}{{ permiso.eliminar }}{% else %}0{% endif %}
        };

        jQuery(document).ready(function () {
            Projects.init();
        });
    </script>
{% endblock %}
