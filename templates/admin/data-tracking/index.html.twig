{% extends 'admin/layout.html.twig' %}

{% block subtitle %} - Data Tracking{% endblock %}

{% block stylesheetspecific %}

    <!-- DevExtreme theme -->
    <!--
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/23.2.5/css/dx.light.css">
    -->

{% endblock %}

{% block content %}
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">Data Tracking</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="{{ url('home') }}" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Data Tracking</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Manage data tracking project</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->

    <div class="m-content">
        <div id="lista-data-tracking" class="m-portlet m-portlet--mobile" m-portlet="true">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Data Tracking
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;" m-portlet-tool="fullscreen"
                               class="m-portlet__nav-link m-portlet__nav-link--icon">
                                <i class="la la-expand"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <div class="row m-row--col-separator-md m-row--col-separator-dashed-md">
                    <div class="col-md-3 m-form">
                        <div class="m-form__heading">
                            <h3 class="m-form__heading-title">Filters:</h3>
                        </div>
                        <!--begin: Search Form -->
                        <div class="m-form__actions m-form__actions--solid" style="margin-top: 0px;padding: 20px;">
                            <div class="form-group m-form__group">
                                <label>Company</label>
                                <div class="row">
                                    <div class="col-md-12">
                                        <select class="form-control m-select2 event-change" id="company">
                                            <option value="">Select</option>
                                            {% for item in companies %}
                                                <option value="{{ item.companyId }}">{{ item.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group m-form__group">
                                <label>From</label>
                                <div class='input-group date'>
                                    <input type='text' class="form-control m-input date-picker "
                                           placeholder="From" autocomplete="off"
                                           id="filtro-fecha-inicial-item"/>
                                    <div class="input-group-append">
                                                            <span class="input-group-text">
                                                                <i class="la la-calendar glyphicon-th"></i>
                                                            </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group m-form__group">
                                <label>To</label>
                                <div class='input-group date'>
                                    <input type='text' class="form-control m-input date-picker "
                                           placeholder="To" autocomplete="off"
                                           id="filtro-fecha-fin-item"/>
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                            <i class="la la-calendar glyphicon-th"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group m-form__group" id="form-group-project">
                                <label>Project</label>
                                <div class="row">
                                    <div class="col-md-12" id="select-project">
                                        <select class="form-control m-select2 event-change" id="project">
                                            <option value="">Select</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group m-form__group">
                                <label>Item</label>
                                <div class="row">
                                    <div class="col-md-12">
                                        <select class="form-control m-select2" id="filtro-item">
                                            <option value="">Select</option>
                                            {% for item in items %}
                                                <option value="{{ item.itemId }}">{{ item.description }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group m-form__group">
                                <a href="javascript:;" id="btn-filtrar"
                                   class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air">
                                <span>
                                    <i class="la la-search"></i>
                                    <span>Search</span>
                                </span>
                                </a>
                            </div>
                        </div>
                        <!--end: Search Form -->
                    </div>
                    <div class="col-md-9">
                        <!--begin: actions -->
                        <div class="m-form m-form--label-align-right m--margin-bottom-15">
                            <div class="row align-items-center">
                                <div class="col-xl-12 order-1">
                                    <div class="form-group m-form__group row align-items-center">
                                        <div class="col-md-2">
                                            {% if permiso.agregar %}
                                                <a id="btn-nuevo-project"
                                                   class="btn btn-success m-btn m-btn--custom m-btn--icon m-btn--air"
                                                   href="javascript:;">
							<span>
								<i class="la la-plus"></i>
								<span>
									New
								</span>
							</span>
                                                </a>
                                            {% endif %}
                                        </div>
                                        <div class="col-md-8"></div>
                                        <div class="col-md-2">
                                            {% if permiso.eliminar %}
                                                <a id="btn-eliminar-data-tracking"
                                                   class="btn btn-danger m-btn m-btn--custom m-btn--icon m-btn--air m--pull-right"
                                                   href="javascript:;">
							<span>
								<i class="la la-trash-o"></i>
								<span>
									Delete
								</span>
							</span>
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!--end: actions -->

                        <!--begin: Datatable -->
                        <div class="m_datatable" id="data-tracking-table-editable"></div>
                        <!--end: Datatable -->
                    </div>
                </div>

            </div>
        </div>

    </div>

    <div class="modal fade" id="modal-item" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New item</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="m-form" id="item-form" action="#"
                          enctype="multipart/form-data" method="post">

                        <input type="hidden" id="data_tracking_id" name="data_tracking_id"/>

                        <div class="form-group m-form__group ic-form-group">
                            <label>
                                <span class="ic-step-number">1</span>
                                Date
                                <span class="ic-small italic">(required)</span>
                            </label>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker "
                                               placeholder="Select" autocomplete="off"
                                               id="item-date" name="date"/>
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group m-form__group ic-form-group">
                            <label>
                                <span class="ic-step-number">2</span>
                                Item
                                <span class="ic-small italic">(required)</span>
                            </label>
                            <div class="row">
                                <div class="col-md-12" id="select-item">
                                    <select class="form-control m-select2" id="item">
                                        <option value="">Select</option>
                                        {% for item in items %}
                                            <option value="{{ item.itemId }}" data-price="{{ item.price }}">
                                                {{ item.description }} ${{ item.price | number_format(2, ',', '.') }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group m-form__group ic-form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>
                                        <span class="ic-step-number">3</span>
                                        Quatity
                                        <span class="ic-small italic">(required)</span>
                                    </label>
                                    <input type="text" class="form-control form-control-number" id="item-quantity" name="quantity">
                                </div>
                                <div class="col-md-4">
                                    <label>
                                        Price
                                    </label>
                                    <div class="input-group m-input-group">
                                        <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                        </div>
                                        <input type="text" class="form-control form-control-number" id="item-price"
                                               name="price">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label>
                                        Total
                                    </label>
                                    <div class="input-group m-input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">$</span>
                                        </div>
                                        <input type="text" class="form-control form-control-number" id="item-total"
                                               name="total" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="btn-salvar-item">Save</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascriptsspecific %}

    <!-- DevExtreme libraries (reference only one of them) -->
    <!--
    <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/23.2.5/js/dx.all.js"></script>
    -->
    <!-- <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/23.2.5/js/dx.web.js"></script> -->
    <!-- <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/23.2.5/js/dx.viz.js"></script> -->

    <script src="{{ asset('bundles/ican/js/pages/data-tracking.js') }}?{{ 'now' | date('U') }}"></script>
    <script>

        var permiso = {
            agregar: {% if permiso.agregar %}{{ permiso.agregar }}{% else %}0{% endif %}, // 1 o 0
            editar: {% if permiso.editar %}{{ permiso.editar }}{% else %}0{% endif %},
            eliminar: {% if permiso.eliminar %}{{ permiso.eliminar }}{% else %}0{% endif %}
        };

        jQuery(document).ready(function () {
            DataTracking.init();
        });
    </script>
{% endblock %}
