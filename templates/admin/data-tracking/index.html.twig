{% extends 'admin/layout.html.twig' %}

{% block subtitle %} - Data Tracking{% endblock %}

{% block stylesheetspecific %}

    <link href="{{ asset('bundles/ican/plugins/fullcalendar/fullcalendar.bundle.css') }}" rel="stylesheet"
          type="text/css"/>

    <!-- DevExtreme theme -->
    <!--
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/23.2.5/css/dx.light.css">
    -->

{% endblock %}

{% block content %}
<!-- BEGIN: Subheader -->
<div class="m-subheader ">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">Data Tracking</h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a href="{{ url('home') }}" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__item">
                    <a href="" class="m-nav__link">
                        <span class="m-nav__link-text">Data Tracking</span>
                    </a>
                </li>
                <li class="m-nav__separator">-</li>
                <li class="m-nav__item">
                    <a href="" class="m-nav__link">
                        <span class="m-nav__link-text">Manage data tracking project</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- END: Subheader -->

<div class="m-content">

    <div id="lista-data-tracking" class="m-portlet m-portlet--mobile" m-portlet="true">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Data Tracking
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <a href="javascript:;" id="btn-reset-filters-data-tracking"
                           class="m-portlet__nav-link btn btn-danger">
                            Reset filters
                        </a>
                    </li>
                    <li class="m-portlet__nav-item">
                        <a href="javascript:;" m-portlet-tool="fullscreen"
                           class="m-portlet__nav-link m-portlet__nav-link--icon">
                            <i class="la la-expand"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            <!--begin: Search Form -->
            <div class="m-form m-form--label-align-right m--margin-bottom-15">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-1">
                        <div class="form-group m-form__group row align-items-center">
                            <div class="col-md-2">
                                {% if permiso.agregar %}
                                    <a id="btn-nuevo-data-tracking"
                                       class="btn btn-success m-btn m-btn--custom m-btn--icon m-btn--air"
                                       href="javascript:;">
                                            <span>
                                                <i class="la la-plus"></i>
                                                <span>New Measurement</span>
                                            </span>
                                    </a>
                                {% endif %}
                            </div>

                            <div class="col-md-2" id="select-project">
                                <select class="form-control m-select2 event-change" id="project">
                                    <option value="">Project</option>
                                    <option value="add">Add Projects</option>

                                    {#
                                    {% for item in projects %}
                                        <option value="{{ item.projectId }}">{{ item.projectNumber }} - {{ item.name }}</option>
                                    {% endfor %}
                                    #}

                                </select>
                            </div>

                            <div class="col-md-2">
                                <div class='input-group date'>
                                    <input type='text' class="form-control m-input date-picker"
                                           placeholder="From" autocomplete="off"
                                           id="fechaInicial"/>
                                    <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class='input-group date'>
                                    <input type='text' class="form-control m-input date-picker"
                                           placeholder="To" autocomplete="off"
                                           id="fechaFin"/>
                                    <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m_form_search"
                                           placeholder="Search...">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
									<span><i class="la la-search"></i></span>
								</span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <a href="javascript:;" id="btn-filtrar"
                                   class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air">
                                <span>
                                    <i class="la la-search"></i>
                                    <span>Search</span>
                                </span>
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!--end: Search Form -->

            <!--begin: calendar -->
            <div id="kt_calendar"></div>
            <!--end: calendar -->

        </div>
    </div>

</div>

<!-- modal filter project -->
<div class="modal fade" id="modal-filter-project" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Search Projects
                    </h5>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>

                </div>
                <div class="modal-body">
                    <form class="m-form" id="form-filter-projects" action="#" enctype="multipart/form-data" method="post">

                        <div class="form-group m-form__group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        From
                                    </label>
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker"
                                               placeholder="From" autocomplete="off"
                                               id="filtro-project-from"/>
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label>
                                        To
                                    </label>
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker"
                                               placeholder="To" autocomplete="off"
                                               id="filtro-project-to"/>
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group m-form__group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Status
                                    </label>
                                    <select class="form-control m-select2 event-change" id="filtro-project-status">
                                        <option value="">All</option>
                                        <option value="working">Working</option>
                                        <option value="notworking">Not Working</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label>
                                        Search
                                    </label>
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input" id="filtro-project-search"
                                               placeholder="Search...">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
									<span><i class="la la-search"></i></span>
								</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="btn-filtrar-projects">Search</button>
                    <button type="button" class="btn btn-info" id="btn-reset-filtros-projects">Reset</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

<div class="modal fade" id="modal-data-tracking" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Measurement</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">

                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active wizard-tab" data-item="1"
                           data-toggle="tab" href="#tab-content-general" id="tab-general">
                            General
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link wizard-tab" data-item="2"
                           data-toggle="tab" href="#tab-content-items" id="tab-items">
                            Items
                        </a>
                    </li>

                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="tab-content-general" role="tabpanel">
                        <form class="m-form" id="data-tracking-form" action="#"
                              enctype="multipart/form-data" method="post">

                            <input type="hidden" id="data_tracking_id" name="data_tracking_id"/>

                            <div class="form-group m-form__group ic-form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label>
                                            <span class="ic-step-number">1</span>
                                            Date
                                            <span class="ic-small italic">(required)</span>
                                        </label>
                                        <div class='input-group date'>
                                            <input type='text' class="form-control m-input date-picker "
                                                   placeholder="Select" autocomplete="off"
                                                   id="data-tracking-date" name="date"/>
                                            <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label>
                                            Inspector
                                        </label>
                                        <div class="row">
                                            <div class="col-md-10">
                                                <select class="form-control m-select2 event-change" id="inspector"
                                                        name="inspector">
                                                    <option value="">Select</option>
                                                    {% for item in inspectors %}
                                                        <option value="{{ item.inspectorId }}">{{ item.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <div class="col-md-2" style="padding-top: 3px; padding-left: 0px;">
                                                <a href="javascript:;" title="Add inspector" id="btn-add-inspector"
                                                   class="btn btn-success m-btn m-btn--icon m-btn--icon-only">
                                                    <i class="la la-plus"></i>
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="form-group m-form__group ic-form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>
                                            <span class="ic-step-number">2</span>
                                            Station Number(s)
                                            <span class="ic-small italic">(optional)</span>
                                        </label>
                                        <input type="text" class="form-control" id="station_number"
                                               name="station_number">
                                    </div>
                                    <div class="col-md-6">
                                        <label>
                                            Measured By
                                        </label>
                                        <input type="text" class="form-control" id="measured_by" name="measured_by">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group m-form__group ic-form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>
                                            <span class="ic-step-number">3</span>
                                            Total Conc Used (CY)
                                            <span class="ic-small italic">(optional)</span>
                                        </label>
                                        <input type="text" class="form-control form-control-number"
                                               id="total_conc_used" name="total_conc_used">
                                    </div>
                                    <div class="col-md-3">
                                        <label>
                                            Conc Vendor
                                        </label>
                                        <input type="text" class="form-control" id="conc_vendor" name="conc_vendor">
                                    </div>
                                    <div class="col-md-3">
                                        <label>
                                            Conc price (#)
                                        </label>
                                        <div class="input-group m-input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" class="form-control form-control-number" id="conc_price" name="conc_price">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label>
                                            Total Concrete
                                        </label>
                                        <div class="input-group m-input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" class="form-control form-control-number" id="total_concrete" name="total_concrete" disabled>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group m-form__group ic-form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label>
                                            <span class="ic-step-number">4</span>
                                            Total Labor
                                            <span class="ic-small italic">(optional)</span>
                                        </label>
                                        <input type="text" class="form-control form-control-number" id="total_labor"
                                               name="total_labor">
                                    </div>
                                    <div class="col-md-4">
                                        <label>
                                            Labor price (#)
                                        </label>
                                        <div class="input-group m-input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" class="form-control form-control-number" id="labor_price" name="labor_price">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <label>
                                            Total Labor Price (#)
                                        </label>
                                        <div class="input-group m-input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" class="form-control form-control-number" id="total_labor_price" name="total_labor_price" disabled>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group m-form__group ic-form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label>
                                            <span class="ic-step-number">5</span>
                                            Crew Lead
                                            <span class="ic-small italic">(optional)</span>
                                        </label>
                                        <input type="text" class="form-control" id="crew_lead" name="crew_lead">
                                    </div>
                                    <div class="col-md-4">
                                        <label>
                                            Total Stamps
                                        </label>
                                        <input type="text" class="form-control form-control-number"
                                               id="total_stamps" name="total_stamps">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group m-form__group ic-form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>
                                            <span class="ic-step-number">6</span>
                                            Notes
                                            <span class="ic-small italic">(optional)</span>
                                        </label>
                                        <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                                    </div>
                                    <div class="col-md-6">
                                        <label>
                                            Other Materials
                                        </label>
                                        <textarea class="form-control" id="other_materials" name="other_materials"
                                                  rows="3"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div id="form-group-totals" class="form-group m-form__group ic-form-group m--hide">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>
                                            <span class="ic-step-number">7</span>
                                            Total Concrete Yiel
                                        </label>
                                        <input type="text" class="form-control form-control-number" id="total_concrete_yiel" name="total_concrete_yiel" disabled>
                                    </div>
                                    <div class="col-md-3">
                                        <label>
                                            Quantity today
                                        </label>
                                        <input type="text" class="form-control" id="total_quantity_today" name="total_quantity_today" disabled>
                                    </div>
                                    <div class="col-md-3">
                                        <label>
                                            Daily total
                                        </label>
                                        <div class="input-group m-input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" class="form-control form-control-number" id="total_daily_today" name="total_daily_today" disabled>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label>
                                           Profit
                                        </label>
                                        <div class="input-group m-input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" class="form-control form-control-number" id="profit" name="profit" disabled>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                    <div class="tab-pane" id="tab-content-items" role="tabpanel">
                        <div class="row" id="lista-items">
                            <div class="col-lg-12">
                                <!--begin: Search Form -->
                                <div class="m-form m-form--label-align-right">
                                    <div class="row align-items-center">
                                        <div class="col-xl-12 order-1">
                                            <div class="form-group m-form__group row align-items-center">
                                                {% if permiso.agregar or permiso.editar %}
                                                    <div class="col-md-2">
                                                        <div class="btn-group">
                                                            <button id="btn-agregar-item" class="btn btn-success"
                                                                    style="margin-bottom: 20px; margin-top: 10px;">
                                                                New <i class="la la-plus"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                {% endif %}

                                                <div class="col-lg-7"></div>

                                                <div class="col-md-3">
                                                    <div class="m-input-icon m-input-icon--left">
                                                        <input type="text"
                                                               class="form-control m-input m_form_search"
                                                               placeholder="Search...">
                                                        <span class="m-input-icon__icon m-input-icon__icon--left">
                                                        <span><i class="la la-search"></i></span>
                                                    </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <!--end: Search Form -->
                                <!--begin: Datatable -->
                                <div class="m_datatable" id="items-table-editable"></div>
                                <!--end: Datatable -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                {% if permiso.agregar or permiso.editar %}
                    <button type="button" class="btn btn-success" id="btn-salvar-data-tracking">Save</button>
                {% endif %}

                {% if permiso.eliminar %}
                    <button type="button" class="btn btn-danger m--hide" id="btn-eliminar-data-tracking">Delete</button>
                {% endif %}

                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



<!-- items -->
